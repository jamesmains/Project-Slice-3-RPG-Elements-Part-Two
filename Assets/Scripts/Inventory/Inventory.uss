.slotsContainer {
    flex-grow: 1;
    margin-top: 75px;
    flex-wrap: wrap;
    flex-direction: row;
    align-items: flex-start;
    align-self: center;
    justify-content: flex-start;
    flex-shrink: 0;
    /*background-image: url('/Assets/Art/UI and Icons/Inventory_0.png');*/
}

.slot {
    width: var(--slot-size);
    height: var(--slot-size);
    margin: 4px;
}

.slotFrame {
    position: absolute;
    top: 0;
    left: 0;
    width: var(--slot-size);
    height: var(--slot-size);
    border-width: 0;
    background-image: url('/Assets/Art/UI and Icons/Inventory_0.png');
    -unity-slice-scale: 0.8;
}

.slotIcon {
    padding: 10%;
    
    flex-shrink: 0;
    flex-grow: 1;
}


.stackCount {
    position: absolute;
    color: white;
    bottom: 0;
    right: 0;
    font-size: 32px;
}

.ghostIcon {
    visibility: hidden;
    position: absolute;
    width: var(--slot-size);
    height: var(--slot-size);
    background-image: none;
}

