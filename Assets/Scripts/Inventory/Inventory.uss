*{
    --max-width: 700px;
    --max-height: 400px;
    --slot-size: 100px;
}

.container {
    flex-grow: 1;
    width: auto;
    height: auto;
    max-width: none;
    max-height: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /*-unity-font-definition: url('/Assets/FantasyCartoonGUI/Fonts/CantedFX Bold.ttf');*/
    /*text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);*/
    /*-unity-text-align: middle-center;*/
    color: rgb(81, 28, 28);
}

.equipmentContainer {
    flex-grow: 1;
    width: auto;
    height: auto;
    max-width: none;
    max-height: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /*-unity-font-definition: url('/Assets/FantasyCartoonGUI/Fonts/CantedFX Bold.ttf');*/
    /*text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);*/
    /*-unity-text-align: middle-center;*/
    color: rgb(81, 28, 28);
}

.inventory {
    left: -350px;
    background-image: url('/Assets/Art/UI and Icons/9Sliced.png');
    -unity-background-image-tint-color: rgb(252,245,229);
    width: var(--max-width);
    padding: 24px;
    align-items: flex-start;
    justify-content: flex-start;
    max-height: var(--max-height);
    flex-grow: 1;
}
.equipment {
    right: -350px;
    background-image: url('/Assets/Art/UI and Icons/9Sliced.png');
    -unity-background-image-tint-color: rgb(252,245,229);
    width: var(--max-width);
    padding: 24px;
    align-items: flex-start;
    justify-content: flex-start;
    max-height: var(--max-height);
    flex-grow: 1;
}

.inventoryHeader {
    position: absolute;
    width: var(--max-width);
    left: 0;
    top: 0;
    height: 75px;
    justify-content: center;
    align-items: center;
    /*background-image: url('/Assets/FantasyCartoonGUI/Textures/inventory_bar_no_shadow.png');*/
    -unity-slice-scale: 0.5;
}

Label {
    font-size: 48px;
}

